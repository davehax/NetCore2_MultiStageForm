@model MultiStageForm.Models.Stagedform

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Stagedform</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stage1" class="control-label"></label>
                <select asp-for="Stage1" class ="form-control" asp-items="ViewBag.Stage1"></select>
            </div>
            <div class="form-group">
                <label asp-for="Stage2" class="control-label"></label>
                <select asp-for="Stage2" class ="form-control" asp-items="ViewBag.Stage2"></select>
            </div>
            <div class="form-group">
                <label asp-for="Stage3" class="control-label"></label>
                <select asp-for="Stage3" class ="form-control" asp-items="ViewBag.Stage3"></select>
            </div>
            <div class="form-group">
                <label asp-for="CurrentStage" class="control-label"></label>
                <input asp-for="CurrentStage" class="form-control" />
                <span asp-validation-for="CurrentStage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
